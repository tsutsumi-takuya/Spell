<div class="container" align="center">

	<h1>Edit User</h1>

	<%= form_for(@user) do |f| %>
		<div class="field">
		    <%= f.label "Name" %></br>
		    <%= f.text_field :name %>
		</div>
		<div class="field">
		    <%= f.label "Introduction" %></br>
		    <%= f.text_area :introduction %>
		</div>
		<div class="photo">
		  	<%= f.label "Photo" %></br>
			<%= f.attachment_field :profile_image, size:"280x280", fallback: "no_image.jpg" %>
		</div>
		<div class="done">
	      	<%= f.submit "Done" %>
	  	</div>
	<% end %>

</div>